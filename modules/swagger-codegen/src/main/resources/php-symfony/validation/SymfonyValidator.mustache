<?php

namespace {{servicePackage}};

use Symfony\Component\Validator\ValidatorBuilderInterface;

class SymfonyValidator implements ValidatorInterface
{
    protected $validator;

    public function __construct(ValidatorBuilderInterface $validatorBuilder)
    {
        $this->validator = $validatorBuilder->enableAnnotationMapping()->getValidator();
    }

    public function validate($value, $constraints = null, $groups = null)
    {
        return $this->validator->validate($value, $constraints, $groups);
    }
}
